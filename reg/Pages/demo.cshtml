@page
@model demo.Pages.DemoModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Organization Registration</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            max-width: 800px;
            margin-top: 30px;
        }

        .header {
            text-align: center;
            margin-bottom: 0; /* Remove bottom margin to connect with the card */
            border: 2px solid #007bff; /* Blue border */
            border-radius: 10px 10px 0 0; /* Rounded top corners */
            padding: 15px; /* Adjust padding to fit content */
            background-color: #007bff; /* Set background color */
            color: #ffffff; /* Text color */
        }

        .card {
            border-radius: 10px;
            border: 2px solid #007bff; /* Add border to the card */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px; /* Ensure there is space at the bottom */
        }

        .card-body {
            padding: 30px;
        }

        .section-heading {
            border-bottom: 2px solid #007bff;
            padding-bottom: 10px;
            margin-bottom: 20px;
            color: #007bff;
        }

        .form-control-sm {
            height: 38px;
            padding: 6px 12px;
            font-size: 14px;
            line-height: 1.5;
            border-radius: 0.25rem;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .text-success {
            font-weight: bold;
        }

        .required {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h2>FPO Registration Form</h2>
        </div>
        <div class="card">
            <div class="card-body">
                <form method="post" id="registrationForm">
                    <h4 class="section-heading">Organization Details</h4>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Organization Name <span class="required">*</span></label>
                            <input asp-for="Name" class="form-control form-control-sm" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label>Registration Number <span class="required">*</span></label>
                            <input asp-for="RegNo" class="form-control form-control-sm" />
                            <span asp-validation-for="RegNo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label>District <span class="required">*</span></label>
                            <select asp-for="SelectedDistrictId" id="districtDropdown" class="form-control form-control-sm">
                                <option value="">Select District</option>
                                @foreach (var district in Model.Districts)
                                {
                                    <option value="@district.Id">@district.Name</option>
                                }
                            </select>
                            <span asp-validation-for="SelectedDistrictId" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-3">
                            <label>Taluk <span class="required">*</span></label>
                            <select asp-for="SelectedTalukaId" id="talukaDropdown" class="form-control form-control-sm">
                                <option value="">Select Taluk</option>
                            </select>
                            <span asp-validation-for="SelectedTalukaId" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-3">
                            <label>Pincode <span class="required">*</span></label>
                            <input asp-for="Pincode" class="form-control form-control-sm" maxlength="6" />
                            <span asp-validation-for="Pincode" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-3">
                            <label>Area <span class="required">*</span></label>
                            <input asp-for="City" class="form-control form-control-sm" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Address Line 1 <span class="required">*</span></label>
                            <input asp-for="AddressLine1" class="form-control form-control-sm" />
                            <span asp-validation-for="AddressLine1" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label>Address Line 2 <span class="required">*</span></label>
                            <input asp-for="AddressLine2" class="form-control form-control-sm" />
                            <span asp-validation-for="AddressLine2" class="text-danger"></span>
                        </div>
                    </div>

                    <h4 class="section-heading">Personal Details</h4>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label>Name <span class="required">*</span></label>
                            <input asp-for="CName" class="form-control form-control-sm" />
                            <span asp-validation-for="CName" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-4">
                            <label>Mobile Number <span class="required">*</span></label>
                            <input asp-for="CMobile" class="form-control form-control-sm" maxlength="10" />
                            <span asp-validation-for="CMobile" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-4">
                            <label>Email Id <span class="required">*</span></label>
                            <input asp-for="CEmail" class="form-control form-control-sm" />
                            <span asp-validation-for="CEmail" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Password <span class="required">*</span></label>
                            <input type="password" asp-for="Password" class="form-control form-control-sm" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label>Confirm Password <span class="required">*</span></label>
                            <input type="password" asp-for="ConfirmPassword" class="form-control form-control-sm" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <a asp-page="/Login" class="btn btn-link">Already have an account? Log in here</a>


                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                    <div id="submitMessage" class="text-success mt-3" style="display:none;">Form submitted successfully!</div>
                </form>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            // Load talukas based on selected district
            $('#districtDropdown').change(function () {
                var districtId = $(this).val();
                if (districtId) {
                    $.ajax({
                        url: '/Demo?handler=Talukas',
                        type: 'GET',
                        data: { districtId: districtId },
                        success: function (result) {
                            var $talukaDropdown = $('#talukaDropdown');
                            $talukaDropdown.empty();
                            $talukaDropdown.append('<option value="">Select Taluka</option>');
                            $.each(result, function (index, taluka) {
                                $talukaDropdown.append('<option value="' + taluka.id + '">' + taluka.name + '</option>');
                            });
                        }
                    });
                } else {
                    $('#talukaDropdown').empty();
                    $('#talukaDropdown').append('<option value="">Select Taluka</option>');
                }
            });

            $('input, select').on('keyup change', function () {
                var $inputField = $(this);
                var $errorMessage = $inputField.siblings('.text-danger');
                if ($inputField.val().trim() !== '') {
                    $errorMessage.hide();
                } else {
                    $errorMessage.show();
                }
            });

            // Allow only numbers for mobile and pincode
            $('#CMobile').on('input', function () {
                this.value = this.value.replace(/\D/g, ''); // Remove non-digit characters
                if (this.value.length > 10) {
                    this.value = this.value.slice(0, 10); // Limit to 10 digits
                }
            });

            $('#Pincode').on('input', function () {
                this.value = this.value.replace(/\D/g, ''); // Remove non-digit characters
                if (this.value.length > 6) {
                    this.value = this.value.slice(0, 6); // Limit to 6 digits
                }
            });
        });
    </script>
</body>
</html>
