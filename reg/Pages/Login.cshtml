@page
@model demo.Pages.LoginModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #e9ecef;
            font-family: Arial, sans-serif;
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .card {
            width: 100%;
            max-width: 400px;
            border: 1px solid #ced4da;
            border-radius: 0.375rem;
            box-shadow: 0 0 0.5rem rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: #fff;
            padding: 1rem;
            text-align: center;
            border-bottom: 1px solid #007bff;
            border-radius: 0.375rem 0.375rem 0 0;
        }

        .card-body {
            padding: 2rem;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #007bff;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .form-group label {
            font-weight: bold;
        }

        .text-danger {
            display: none; /* Hide all validation messages */
        }

        .login-container .card {
            transition: all 0.3s ease;
        }

            .login-container .card:hover {
                box-shadow: 0 0 1rem rgba(0, 0, 0, 0.2);
            }

        .btn-link {
            color: #007bff;
            font-size: 0.875rem;
        }

            .btn-link:hover {
                color: #0056b3;
                text-decoration: underline;
            }

        .d-flex {
            display: flex;
            justify-content: space-between;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Login</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Username">Mobile Number</label>
                        <input asp-for="Username" class="form-control" placeholder="Enter your mobile number" />
                        <!-- Validation message for Username is hidden -->
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                        <!-- Validation message for Password is hidden -->
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex">
                        <a href="#" class="btn btn-link">Forgot Password?</a>
                        <a href="/demo" class="btn btn-link">New Registration</a>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">Login</button>

                    <div asp-validation-summary="ModelOnly" class="text-danger mt-2" style="display: none;"></div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
